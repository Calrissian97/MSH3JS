{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "plugins": {
    "fs": {}
  },
  "productName": "msh3js_tauri",
  "version": "1.0.0",
  "identifier": "msh3js-tauri.io.github.calrissian97",
  "build": {
    "frontendDist": "../dist",
    "beforeBuildCommand": "npm run build:web",
    "beforeDevCommand": "npm run build:web"
  },
  "app": {
    "windows": [
      {
        "title": "MSH3JS",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "dragDropEnabled": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "DeveloperTool",
    "publisher": "Landon Hull aka Calrissian97",
    "shortDescription": "Three.js model viewer for MSH files.",
    "longDescription": "Three.js model viewer for MSH files \n(Mesh format for the classic Star Wars Battlefront games)",
    "windows": {
      "nsis": null
    },
    "fileAssociations": [
      {
        "ext": ["msh"],
        "description": "Pandemic Studios model."
      }
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
